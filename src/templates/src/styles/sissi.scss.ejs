$sissi-color-green: rgb(121, 183, 78);
$sissi-color-white: rgb(255, 255, 255);
$sissi-gap-small: 12px;
$sissi-gap-regular: 20px;

@mixin sissi-font {
  font-family: 'Assistant', sans-serif;
  font-weight: 300;
}

.sissi-main {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 3 * $sissi-gap-regular;

  @include sissi-font;
}

.sissi-logo {
  height: 200px;
  margin-bottom: 2 * $sissi-gap-regular;
}

.sissi-heading {
  margin: 0;

  @include sissi-font;
}

.sissi-name {
  font-style: italic;
}

<%_ if (!IS_SINGLE_PAGE) { _%>
.sissi-nav {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 3 * $sissi-gap-regular;
  margin-top: 2 * $sissi-gap-regular;
  background-color: $sissi-color-green;
}

.sissi-nav-link {
  margin: $sissi-gap-small $sissi-gap-small 0 0;
  padding: $sissi-gap-small;
  color: $sissi-color-white;
  border: 4px solid $sissi-color-white;
  border-bottom: 0;
  font-size: 19px;
  text-decoration: none;
}

.sissi-nav-link--active {
  background-color: $sissi-color-white;
  color: $sissi-color-green;
}

<%_ } _%>
.sissi-wrapper {
  display: flex;
  flex-wrap: wrap;
  width: 80vw;
  margin-top: 2 * $sissi-gap-regular;
}

.sissi-section {
  width: calc(50% - #{$sissi-gap-regular});
  margin-right: $sissi-gap-regular;

  &:nth-of-type(even) {
    text-align: right;
    margin-right: 0;
    margin-left: $sissi-gap-regular;

    .sissi-section__title {
      margin-left: 50%;
    }
  }
}

.sissi-section__title {
  width: 50%;
  margin: 0 0 $sissi-gap-small;
  border-bottom: 4px solid $sissi-color-green;
  font-size: 19px;

  @include sissi-font;
}

.sissi-section__body {
  p {
    margin: 0 0 6px;
  }

  img {
    float: right;
    width: 15%;
    margin-left: $sissi-gap-small;
  }
}
